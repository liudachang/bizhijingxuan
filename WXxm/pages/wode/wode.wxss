/*头像整体*/
.touxiang{
  width:100%;
  height:300rpx;
  background-color:#0aa874;
  display: flex;
  flex-direction:column;/*主轴Y轴*/
  justify-content: center;
  align-content: center;
  font-size: 13px;

}
/*头像位置调节*/
.touxiang-item{
  width:120rpx;
  height:120rpx;
  border-radius: 50%;
  margin-top:80rpx;
  margin-left:40rpx;
}
/*头像下文字位置调节*/
.touxiang text{
  margin-top:10rpx;
  margin-left:70rpx;
}

/*粉丝  关注*/
/*整体*/
.fensi{
  width:100%;
  height:50rpx;
  display: flex;
  justify-content: space-around ;/*每个间距相同*/
  margin:20rpx ; 
  font-size:14px;
}
/*换主轴方向*/
.fensi-item,.guanzhu-item{
  display:flex;
  flex-direction: column;/*y轴 主轴*/
  justify-content: center;
  align-content: center;
  text-align: center;
}
/*箭头和收藏的恩怨*/
.shoucang .jiantou{
  display:flex;
  justify-content: space-between;
}